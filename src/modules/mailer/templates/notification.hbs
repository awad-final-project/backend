    .message {
      background: white;
      padding: 20px;
      border-radius: 5px;
      border-left: 4px solid #4facfe;
      margin: 20px 0;
    }
    .footer {
      text-align: center;
      color: #888;
      font-size: 12px;
      margin-top: 20px;
    }
  </style>
</head>
